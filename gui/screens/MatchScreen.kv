<GoalPopup>:
    size_hint: 0.8, 0.08
    score: ''
    minute: ''
    goalscorer: ''
    bcolor: (1, 1, 1, 1)
    border_color: (0.5, 0.5, 0.5, 1)
    background: ''
    canvas.before:
        Color:
            rgba: root.bcolor
    canvas:
        Color:
            rgba: root.bcolor
        Ellipse:
            angle_start:360
            angle_end:540
            pos: (self.size[0] + self.pos[0] - self.size[1]/2.0, self.pos[1])
            size: (self.size[1], self.size[1])
        Color:
            rgba: root.border_color
        Line:
            points: self.pos[0], self.pos[1], self.pos[0] + self.size[0], self.pos[1]
            width: 3
        Line:
            points: self.pos[0], self.pos[1] + self.size[1], self.pos[0] + self.size[0], self.pos[1] + self.size[1]
            width: 3
        Line:
            ellipse: self.size[0] + self.pos[0] - self.size[1]/2.0, self.pos[1], self.size[1], self.size[1], 360, 540
            width: 3
    FloatLayout:
        Image:
            source: 'atlas://gui/icons/myatlas/soccer-ball'
            size_hint: (1, 1.4)
            pos_hint: {'x': -0.5, 'y' : -0.2}
        BoxLayout:
            size_hint: (1, 1)
            pos_hint: {'x': 0, 'y' : 0}
            Spacing:
                bcolor: (0, 0, 0, 0)
                size_hint_x: 0.15
            BlackLabel:
                font_size: dp(18)
                text: root.minute
                size_hint_x: 0.125
                bold: True
            BlackLabel:
                font_size: dp(18)
                text: root.score
                size_hint_x: 0.125
            BlackLabel:
                font_size: dp(18)
                text: root.goalscorer
                size_hint_x: 0.6


<SubstitutionScreen>:
    BoxLayout:
        orientation: "vertical"
        PlayerNormalViewHeader:
            size_hint_y: 0.05
            id: substitution_player_header
        SwappableList:
            id: team_list
            viewclass: 'SelectablePlayerNormalView'
            content_height: dp(26)
        MainHeader:
            text: 'Substitutes'
            size_hint_y: 0.05
        SwappableList:
            id: subs_list
            viewclass: 'SelectablePlayerNormalView'
            content_height: dp(26)
        Footer:
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 0.08
            id: footer
            ButtonWithImageAndText:
                label_text: "Back"
                on_release: root.back()
                source: 'atlas://gui/icons/myatlas/back'
                size_hint_x: 0.2
            BlackLabel:
                size_hint_x: 0.6
                id: subs_information
            ButtonWithImageAndText:
                id: play_pause
                on_release: root.confirm_substitution()
                source: 'atlas://gui/icons/myatlas/check'
                size_hint_x: 0.2
                label_text: "Substitution"

