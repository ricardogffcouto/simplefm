<MatchHeader@BoxLayout>:
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    home_team: ''
    home_goals: ''
    home_color: (0.5, 0.5, 0.5, 1)
    away_team: ''
    away_goals: ''
    away_color: (1, 1, 1, 1)
    minutes: ''
    BoxLayout:
        padding: [9, 10]
        size_hint_x: 0.45
        canvas.before:
            Color:
                rgba: root.home_color
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            size_hint_x: 0.75
            text: root.home_team
            align: 'right'
            font_size: dp(16)
            bold: True
        BlackLabel:
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_x: 0.25
            text: root.home_goals
            font_size: dp(16)
    Label:
        size_hint_x: 0.1
        text: root.minutes
        font_size: dp(16)
    BoxLayout:
        padding: [9, 10]
        size_hint_x: 0.45
        canvas.before:
            Color:
                rgba: root.away_color
            Rectangle:
                pos: self.pos
                size: self.size
        BlackLabel:
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_x: 0.25
            text: root.away_goals
            font_size: dp(16)
        Label:
            size_hint_x: 0.75
            text: root.away_team
            align: 'left'
            font_size: dp(16)
            bold: True

<Possession@BoxLayout>:
    label_text: ""
    home_color: (72/255.0, 92/255.0, 150/255.0, 1)
    away_color: (0.5, 0, 0, 1)
    Label:
        canvas.before:
            Color:
                rgba: root.home_color
            Rectangle:
                pos: self.pos
                size: self.size
        id: home_possession
        text: '  ' + root.label_text
        text_size: self.size
        halign: 'left'
        valign: 'center'
        bold: 'True'
        font_size: dp(12)
    Label:
        canvas.before:
            Color:
                rgba: root.away_color
            Rectangle:
                pos: self.pos
                size: self.size
        id: away_possession

<MatchScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "gui/backgrounds/match.jpg"
    minutes: ''
    home_team: ''
    home_goals: ''
    away_team: ''
    away_goals: ''
    home_possession: 0
    home_possession_last_5_minutes: 0
    BoxLayout:
        orientation: 'vertical'
        MatchHeader:
            size_hint_y: 0.06
            id: match_result
        Label:
            canvas.before:
                Color:
                    rgba: (0.1, 0.1, 0.1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 0.04
            text: "Possession"
        Possession:
            id: total_possession
            size_hint_y: 0.04
        Label:
            canvas.before:
                Color:
                    rgba: (0.1, 0.1, 0.1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 0.005
        Possession:
            id: last_5_possession
            size_hint_y: 0.04
        Label:
            canvas.before:
                Color:
                    rgba: (0.1, 0.1, 0.1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 0.005
        MatchScreens:
            size_hint_y: 0.81
            id: content

<MainMatchScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: goalscorers
            ScrollableList:
                id: home_goalscorers
                content_height: dp(22)
                viewclass: 'PlayerGoalscorer'
                size_hint_x: 0.49
            Label:
                size_hint_x: 0.02
            ScrollableList:
                id: away_goalscorers
                content_height: dp(22)
                viewclass: 'PlayerGoalscorer'
                size_hint_x: 0.49
        PlayerNormalViewHeader:
            size_hint_y: 0.05
            id: main_match_player_header
        ScrollableList:
            id: team_list
            content_height: dp(26)
            viewclass: 'PlayerNormalView'
        Footer:
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 0.08
            id: footer
            ButtonWithImageAndText:
                id: substitution
                label_text: "Substitution"
                source: 'atlas://gui/icons/myatlas/transfers'
                on_release: root.substitution()
            ButtonWithImageAndText:
                id: play_pause
                source: 'atlas://gui/icons/myatlas/ball'
                label_text: "Play"
                on_release: root.play_pause()
