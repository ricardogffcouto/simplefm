#:import help gui.helpers
#:import constants gui.constants
<NameTextInput>:
    multiline: False
    padding: [20, (self.height-self.line_height)/2.0]

<NewGameScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "gui/backgrounds/fundo.jpg"
    BoxLayout:
        orientation: 'vertical'
        spacing: 1
        MainHeader:
            text: constants.NEW_GAME
            size_hint_y: 0.1
        BoxLayout:
            size_hint_y: 0.1
            LightHeader:
                size_hint_x: 0.25
                text: constants.GAME_NAME
            NameTextInput:
                size_hint_x: 0.75
                hint_text: constants.MAX_CHAR_HINT
                id: constants.IdNames.GAME_NAME.value
        BoxLayout:
            size_hint_y: 0.1
            LightHeader:
                size_hint_x: 0.25
                text: constants.MANAGER_NAME
            NameTextInput:
                size_hint_x: 0.75
                hint_text: constants.MAX_CHAR_HINT
                id: constants.IdNames.MANAGER_NAME.value
        BoxLayout:
            size_hint_y: 0.1
            LightHeader:
                size_hint_x: 0.25
                text: constants.TEAM
            Spinner:
                size_hint_x: 0.75
                id: constants.IdNames.TEAMS.value
                on_text: root.show_hide_create_new_team()
        BoxLayout:
            orientation: 'vertical'
            id: constants.IdNames.NEW_TEAM.value
            size_hint_y: 0.4
            spacing: 1
            BoxLayout:
                LightHeader:
                    text: constants.NAME
                    size_hint_x: 0.25
                NameTextInput:
                    hint_text: "Max 16 char, only letters and numbers"
                    id: constants.IdNames.NEW_TEAM_NAME.value
                    size_hint_x: 0.75
            BoxLayout:
                LightHeader:
                    text: constants.COLOR
                    size_hint_x: 0.25
                Spinner:
                    id: constants.IdNames.NEW_TEAM_COLOR.value
                    on_text: self.background_color = help.color(self.text)
                    size_hint_x: 0.75
            BoxLayout:
                LightHeader:
                    text: constants.COUNTRY
                    size_hint_x: 0.25
                Spinner:
                    id: constants.IdNames.NEW_TEAM_COUNTRY.value
                    size_hint_x: 0.75
            LightHeader:
                text: constants.DIVISION_AND_POSITION
            BoxLayout:
                LightHeader:
                    text: constants.DIV
                Spinner:
                    id: constants.IdNames.NEW_TEAM_PREV_DIV.value
                LightHeader:
                    text: constants.POS
                Spinner:
                    id: constants.IdNames.NEW_TEAM_PREV_POS.value
        Label:
            size_hint_y: 0.1
            id: constants.IdNames.SPACING.value
        BoxLayout:
            size_hint_y: 0.1
            spacing: 10
            BackButton:
                on_release: root.manager.current = 'StartScreen'
                size_hint_x: 0.25
            OKButton:
                label_text: constants.CREATE_GAME
                on_release: root.can_start_new_game()
                size_hint_x: 0.75

